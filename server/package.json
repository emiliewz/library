{
  "name": "server",
  "version": "1.0.0",
  "description": "This is the backend for library app",
  "main": "index.js",
  "scripts": {
    "generate": "graphql-codegen --config src/codegen.ts",
    "compile": "npm run generate && tsc",
    "start": "npm run compile && NODE_ENV=PRODUCTION node build/index.js",
    "dev": "NODE_ENV=DEVELOPMENT ts-node-dev src/index.ts",
    "lint": "eslint --ext .ts .",
    "build:ui": "rm -rf dist && cd ../client && npm i && npm run build && cp -r dist ../server",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "mongoose-unique-validator": "^4.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/schema": "^10.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.2",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.15.1"
  }
}
